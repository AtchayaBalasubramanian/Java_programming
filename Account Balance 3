import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int account_balance=sc.nextInt();
        int process=sc.nextInt();
        switch(process)
        {
            case 1:
                int depo=sc.nextInt();
                System.out.println(account_balance+depo);
                break;
            case 2:
                int withd=sc.nextInt();
                if(withd>account_balance)
                {
                 System.out.println("Insufficient Balance"); 
                }
                else
                  System.out.println(account_balance-withd); 
                break;
            default:
                System.out.println("Invalid Input");
        }
    }
}
