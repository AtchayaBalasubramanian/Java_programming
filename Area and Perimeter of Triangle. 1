import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int base=sc.nextInt();
        int height=sc.nextInt();
        int s1=sc.nextInt();
        int s2=sc.nextInt();
        int s3=sc.nextInt();
        float area=(base*height)/2f;
        float perimeter=s1+s2+s3;
        System.out.printf("Area of Triangle is %.2f",area);
        System.out.printf("\nPerimeter of Triangle is %.2f", perimeter);
    }
}
