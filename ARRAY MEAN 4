import java.io.*;
import java.util.*;
public class Solution {
    public static void main(String[] args) {
    Scanner sc=new Scanner(System.in);
    int n=sc.nextInt();
    int a[]=new int[n];
        double  mean=0;
    for(int i=0;i<n;i++)
    {
    a[i]=sc.nextInt();
    }
    int sum=0;
    
    for(int i=0;i<n;i++)
    {
     sum+=a[i]; 
     mean=(double)sum/n;
    }
    System.out.printf("Array Mean Value is %.2f",mean);
        
    }
}
